{
    "fields": {
        "name": {
            "type": "varchar",
            "required": true,
            "maxLength": 255
        },
        "textoPregunta": {
            "type": "text",
            "required": true
        },
        "categoria": {
            "type": "varchar",
            "maxLength": 100,
            "required": true
        },
        "rolObjetivo": {
            "type": "multiEnum",
            "options": ["asesor", "gerente"],
            "required": true
        },
        "estaActiva": {
            "type": "bool",
            "default": true
        },
        "orden": {
            "type": "int",
            "default": 0
        },
        "creadoPor": {
            "type": "link",
            "entity": "User"
        },
        "fechaCreacion": {
            "type": "datetime"
        },
        "fechaModificacion": {
            "type": "datetime"
        },
        "descripcion": {
            "type": "text"
        }
    },
    "links": {
        "creadoPor": {
            "type": "belongsTo",
            "entity": "User"
        },
        "respuestasEncuesta": {
            "type": "hasMany",
            "entity": "RespuestaEncuesta",
            "foreignKey": "preguntaId",
            "foreign": "pregunta"
        }
    },
    "collection": {
        "orderBy": "orden",
        "order": "asc"
    }
}